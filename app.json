{
  "expo": {
    "name": "Lista Rápida",
    "slug": "lista-rapida",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#f4511e"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.listarapida.app",
      "buildNumber": "1.0.0",
      "icon": "./assets/ios-icon.png"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#f4511e"
      },
      "package": "com.listarapida.app",
      "versionCode": 1,
      "edgeToEdgeEnabled": true
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "name": "Lista Rápida",
      "shortName": "Lista Rápida",
      "lang": "pt-BR",
      "description": "Um aplicativo simples e eficiente para gerenciar suas tarefas diárias",
      "themeColor": "#f4511e",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      "expo-router"
    ],
    "scheme": "lista-rapida",
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    },
    "owner": "your-expo-username",
    "description": "Um aplicativo simples e eficiente para gerenciar suas tarefas diárias",
    "githubUrl": "https://github.com/your-username/lista-rapida",
    "privacy": "public",
    "primaryColor": "#f4511e"
  }
}
